<app-header></app-header>
<app-nav-bar></app-nav-bar>

<main class="main-container">
    <div class="in-main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="in-mcontainer">
                        
                        <div class="breadcrumb">
                            <ul class="lst-breadcrumb">
                                <li>
                                    <a href="javascript:;">Change Password</a>
                                </li>
                                <!-- <li>
                                    <a href="javascript:;">Parent</a>
                                </li>
                                <li class="current">Current</li> -->
                            </ul><!--.lst-breadcrumb-->
                        </div>
                        <div class="vspacer20"></div>
                        
                        <form [formGroup]="chPassForm" (ngSubmit)="onSubmit(chPassForm.value)">
                            <div class="row form-group">

                                <input type="hidden" formControlName="musrcode">
                                <input type="hidden" formControlName="mregdevicemacid">
                                
                                <div class="col-12 col-md-6">
                                    <div class="form-controller control-mandatory">
                                        <label>Old Password</label>
                                        <input type="text" formControlName="moldpass1" placeholder="Enter old password"><u></u>
                                        <em>Please enter old password here</em>
                                    </div><!--.form-control-->
                                    <div class="alert alert-danger" *ngIf="chPassForm.controls['moldpass1'].hasError('required') && chPassForm.controls['moldpass1'].touched">
                                        Please enter old password here
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-controller control-mandatory">
                                        <label>New Password</label>
                                        <input type="text" formControlName="musrpass" placeholder="Enter new password"><u></u>
                                        <em>Please enter new password here</em>
                                    </div><!--.form-control-->
                                    <div class="alert alert-danger" *ngIf="chPassForm.controls['musrpass'].hasError('required') && chPassForm.controls['musrpass'].touched">
                                        Please enter new password here
                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-12 col-md-6">
                                    <div class="form-controller control-mandatory">
                                        <label>Confirm Password</label>
                                        <input type="text" formControlName="mconfpass" placeholder="Confirm password"><u></u>
                                        <em>Please confirm new password here</em>
                                    </div><!--.form-control-->
                                    <div class="alert alert-danger" *ngIf="chPassForm.controls['mconfpass'].hasError('required') && chPassForm.controls['mconfpass'].touched">
                                        Please confirm new password here
                                    </div>
                                </div>
                            </div>
                            

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-footer text-right">
                                        <button class="button">Submit</button>
                                    </div><!--.form-footer-->
                                </div><!--.col-12-->
                            </div><!--.row-->
                        </form>

                    </div><!--.in-mcontainer-->
                </div><!--.col-12-->
            </div><!--.row-->
        </div><!--.container-fluid-->
    </div><!--.in-main-->
</main><!--.main-container-->
<!-- ================ Main Page Content - End   ==============-->